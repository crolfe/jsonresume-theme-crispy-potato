<!doctype html>
<html lang="{{language}}">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, minimal-ui">
  <meta http-equiv="x-ua-compatible" content="ie=edge">

  <title>{{resume.basics.name}}</title>

  <link href="https://jsonresume.org/favicon.png" rel="shortcut icon">
  <script src="https://use.fontawesome.com/ac952219e9.js"></script>

  {{{css}}}
</head>

<body>

  <header class="container content">
    <div class="row">

      <!-- BASIC INFORMATION -->

      {{#resume.basics}}
        <div class="twelve columns">

          {{#if picture}}
            <img src="{{picture}}" alt="CV image" id="cv-image">
          {{/if}}

          <h1>{{name}}</h1>

          {{#if label}}
            <div class="impact">{{label}}</div>
          {{/if}}

          {{#location}}
            <div id="area">
              <i class="fa fa-map-marker" aria-hidden="true"></i>{{region}}, {{countryCode}}
            </div>
          {{/location}}

          <ul class="unstyled">
            {{#if email}}
              <li>
                <strong>
                  {{@root.t.email}}
                </strong> {{email}}
              </li>
            {{/if}}
            {{#if phone}}
              <li>
                <strong>
                  {{@root.t.phone}}
                </strong> {{phone}}
              </li>
            {{/if}}
            {{#location}}
              <li>
                {{#if address}}
                  <strong>
                    {{@root.t.address}}
                  </strong> {{address}}, {{postalCode}} {{city}}
                {{/if}}
              </li>
            {{/location}}
          </ul>
        </div>

        {{#if summary}}
          <div class="twelve columns">
            <p id="summary">
              {{summary}}
            </p>
          </div>
        {{/if}}

        {{#if profiles}}
          <div class="twelve columns">
            <ul class="unstyled">
              {{#each profiles}}
                <li>
                  <a href="{{url}}" target="_blank">
                    <i class="fa fa-{{get_network_class network}}" aria-hidden="true"></i>@{{username}}
                  </a>
                </li>
              {{/each}}
            </ul>
          </div>
        {{/if}}
      {{/resume.basics}}

      <!-- /BASIC INFOMATION -->

    </div>
  </header>

  <main class="container content">

    <!-- WORK -->
    {{#if resume.work.length}}
      <div class="row">
        <div class="twelve columns" id="work">
          <h2>{{@root.t.experience}}</h2>

          {{#each resume.work}}
            <div class="row">
              <div class="four columns">
                {{#if company}}
                  <h3>
                    {{#if website}}
                      <a href="{{website}}" target="_blank">{{company}}</a>
                    {{else}}
                      {{company}}
                    {{/if}}
                  </h3>
                {{/if}}

                {{#if position}}
                  <strong>{{position}}</strong>
                  <br>
                {{/if}}

                {{{get_work_date @this}}}
              </div>

              <div class="eight columns">
                {{#if summary}}
                  <p>{{summary}}</p>
                {{/if}}

                {{#if highlights.length}}
                  <ul>
                    {{#each highlights}}
                      <li>{{@this}}</li>
                    {{/each}}
                  </ul>
                {{/if}}
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}

    <!-- /WORK -->

    <!-- EDUCATION -->

    {{#if resume.education.length}}
      <div class="row">
        <div class="twelve columns" id="education">
          <h2>{{@root.t.education}}</h2>
        </div>
      </div>
    {{/if}}

    <!-- /EDUCATION -->
  </main>
</body>

</html>
